# Claude API Key (from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-api-key-here

# Gmail API credentials file (download from Google Cloud Console)
# Place the credentials.json file in the project root
# OAuth token will be generated automatically on first run

# Database Configuration
# PostgreSQL connection URL from Railway (or other provider)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/getmailzen

# Encryption Key for OAuth Tokens
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Flask Secret Key (for session management)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-flask-secret-key-here

# Stripe API Keys (for payments)
STRIPE_PUBLIC_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Email Service (Postmark or SendGrid)
POSTMARK_API_KEY=your-postmark-api-key-here
# OR
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Environment (development, staging, production)
ENVIRONMENT=development
